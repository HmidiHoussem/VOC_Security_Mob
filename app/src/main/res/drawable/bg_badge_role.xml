<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com"
    tools:ignore="NamespaceTypo">
<!-- Couleur de fond (ici un violet Android standard) -->
<solid android:color="#6200EE" />

<!-- L'arrondi des coins pour l'effet "pilule" ou "badge" -->
<corners android:radius="20dp" />

<!-- Optionnel : une petite bordure ou padding interne -->
<padding
    android:left="8dp"
    android:right="8dp"
    android:top="4dp"
    android:bottom="4dp" />
</shape>
